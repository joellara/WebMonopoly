<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4" style="padding-top:2em;">
           <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="text-center">Ingresa tus credenciales para jugar.</h1>
                </div>
                <div class="panel-body">
                    <form id="login-form" action="/auth/login/" method="post" name="login-form" >
                        <span id="helpBlock" class="help-block invisible">
                            El usuario ya existe.
                        </span>
                        <div class="form-group">
                            <div style="margin-top: 20px; margin-bottom: 25px" class=" input-group">
                              <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                              <input id="login-username" type="text" class="form-control" name="name" value="" placeholder="Usuario" required>
                            </div>
                        </div>
                        <div style="margin-bottom: 35px" class=" input-group">
                          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                          <input id="login-password" type="password" class="form-control" name="password" placeholder="Contraseña" required>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block" style="margin-bottom:10px;">Iniciar Sesión</button>
                    </form>
                <p class="text-center"><a href="/sign-up/" ><small>Crear nueva cuenta</small></a></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/loginCtrl.js"></script>